                      <div class="clearfix"></div>
                    <% end %>

                    <% if @booking_item_family.height %>
                      <div class="input2_wrapper">
                        <label class="col-md-5" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.summary_page.participant_weight%></label>
                        <div class="col-md-7" style="padding-right:0;padding-left:0;">
                          <input name="booking_line_resources[<%=booking_line_resource.id%>][customer_2_weight]"
                                 class="form-control alt" type="text" placeholder="<%=t.front_end_reservation.summary_page.participant_weight%>" maxlength="20"
                                 value="<%=booking_line_resource.customer_2_weight%>">

                        </div>
                      </div>
                      <div class="clearfix"></div>
                    <% end %>
                  <% end %>

                <% end %>
              <% end %>
            <% end %>

            <div class="margin-top"></div>
            <div class="clearfix"></div>
            <a id="btn_update_reservation" href="#" class="btn btn-default btn-cf-submit3"><%=t.front_end_reservation.summary_page.update_data_button%></a>

          </form>

        <% end%>

      </div>

      <!-- Separator -->
      <div class="col-md-1"></div>

      <!-- Sidebar : Summary -->
      <div class="col-md-4 booking-row">

        <!-- Summary -->
        <h3 class="line"><%=t.front_end_reservation.reservation_summary_title%></h3>

        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.date_from%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%=SystemConfiguration::Settings.instance.format_date(@booking.date_from, :full, session[:locale])%><% if @booking_item_family and @booking_item_family.time_to_from %> <%=@booking.time_from%><%end%></span>
          </div>
        </div>
        <div class="clearfix"></div>

        <% if @booking_item_family and @booking_item_family.pickup_return_place %>
          <div class="input2_wrapper">
            <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.pickup_place%></label>
            <div class="col-md-6" style="padding-right:0;padding-left:0;">
              <span class="blue"><%=@booking.pickup_place_customer_translation%></span>
            </div>
          </div>
          <div class="clearfix"></div>
        <% end %>

        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.date_to%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%=SystemConfiguration::Settings.instance.format_date(@booking.date_to, :full, session[:locale])%><% if @booking_item_family and @booking_item_family.time_to_from %> <%=@booking.time_to%><%end%></span>
          </div>
        </div>
        <div class="clearfix"></div>

        <% if @booking_item_family and @booking_item_family.pickup_return_place %>
          <div class="input2_wrapper">
            <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.return_place%></label>
            <div class="col-md-6" style="padding-right:0;padding-left:0;">
              <span class="blue"><%=@booking.return_place_customer_translation%></span>
            </div>
          </div>
          <div class="clearfix"></div>
        <% end %>

        <!-- Extras -->
        <% if @booking.booking_extras.size > 0 %>
          <div class="margin-top"></div>
          <h3 class="line"><%=t.front_end_reservation.booking_detail_extras_title%></h3>

          <% @booking.booking_extras.each do |booking_extra| %>
            <div class="input2_wrapper">
              <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=booking_extra.extra_description_customer_translation%> x <%=booking_extra.quantity%></label>
              <div class="col-md-6" style="padding-right:0;padding-left:0;">
                <span class="blue"><%= "%.2f" % booking_extra.extra_cost%>€</span>
              </div>
            </div>
            <div class="clearfix"></div>
          <% end %>
        <% end %>

        <!-- Price -->
        <div class="margin-top"></div>
        <h3 class="line"><%=t.front_end_reservation.reservation_summary_price%></h3>

        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_total_product%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.item_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>

        <% if (@booking.extras_cost > 0) %>
        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_total_extras%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.extras_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>
        <% end %>

        <% if (@booking.time_from_cost > 0) %>
        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_pickup_time_supplement%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.time_from_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>
        <% end %>

        <% if (@booking.pickup_place_cost > 0) %>
        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_pickup_place_supplement%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.pickup_place_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>
        <% end %>

        <% if (@booking.time_to_cost > 0) %>
        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_return_time_supplement%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.time_to_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>
        <% end %>

        <% if (@booking.return_place_cost > 0) %>
        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_return_place_supplement%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.return_place_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>
        <% end %>

        <% if total_cost_includes_deposit %>
          <% if @booking.total_deposit > 0 %>
          <div class="input2_wrapper">
            <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_deposit%></label>
            <div class="col-md-6" style="padding-right:0;padding-left:0;">
              <span class="blue"><%= "%.2f" % @booking.total_deposit%>€</span>
            </div>
          </div>
          <div class="clearfix"></div>
          <% end %>
        <% end %>

        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px; text-transform: uppercase;"><%=t.front_end_reservation.reservation_summary_total%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%= "%.2f" % @booking.total_cost%>€</span>
          </div>
        </div>
        <div class="clearfix"></div>

        <% if @booking.total_paid > 0 %>
          <div class="input2_wrapper">
            <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.booking_detail_summary_paid%></label>
            <div class="col-md-6" style="padding-right:0;padding-left:0;">
              <span class="blue"><%= "%.2f" % @booking.total_paid%>€</span>
            </div>
          </div>
          <div class="clearfix"></div>
        <% end %>

        <% if @booking.total_pending > 0 %>
          <div class="input2_wrapper">
            <label class="col-md-6" style="padding-left:0;padding-top:12px; text-transform: uppercase;"><%=t.front_end_reservation.booking_detail_summary_pending%></label>
            <div class="col-md-6" style="padding-right:0;padding-left:0;">
              <span class="red"><%= "%.2f" % @booking.total_pending%>€</span>
            </div>
          </div>
          <div class="clearfix"></div>
        <% end %>

        <% if !total_cost_includes_deposit %>
          <% if @booking.total_deposit > 0 %>
          <div class="input2_wrapper">
            <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.reservation_summary_deposit%></label>
            <div class="col-md-6" style="padding-right:0;padding-left:0;">
              <span class="blue"><%= "%.2f" % @booking.total_deposit%>€</span>
            </div>
          </div>
          <div class="clearfix"></div>
          <% end %>
        <% end %>


        <% if @booking.total_deposit > 0 %>
        <div class="input2_wrapper">
          <label class="col-md-12" style="padding-left:0;padding-top:12px;"><small>* <%=t.front_end_reservation.reservation_summary_deposit_detail%></small></label>
        </div>
        <div class="clearfix"></div>
        <% end %>

        <!-- Payment -->
        <% if (@booking.can_pay_deposit? or @booking.can_pay_pending? or @booking.can_pay_total?) and (@payment_methods.tpv_virtual or @payment_methods.paypal)%>
          <div class="margin-top"></div>
          <h3 class="line"><%=t.front_end_reservation.payment_title%></h3>

          <% if @booking.can_pay_deposit? and !@booking.can_pay_total? %>
            <div class="alert alert-success">
              <p><%=t.front_end_reservation.payment_to_confirm_reservation(@deposit, "(%.2f #{@currency})" % @booking.booking_amount)%></p>
            </div>
          <% end %>

          <!-- Payment methods -->
          <div class="panel-group payments-options" id="accordion" role="tablist" aria-multiselectable="true">
            <% if @payment_methods.tpv_virtual %>
              <div id="tpv_virtual_container" class="panel panel-default" <%unless @payment_methods.paypal%>style="display:none"<%end%>>
                <div class="panel-heading" role="tab" id="headingThree">
                  <h4 class="panel-title">
                    <a class="<% unless @payment_methods.paypal%>show<%else%>collapsed<%end%>"
                       data-payment-method="<%=@payment_methods.tpv_virtual.id%>" data-toggle="collapse"
                       data-parent="#accordion" href="#collapse3" aria-expanded="false" aria-controls="collapseThree">
                      <span class="dot"></span> <%=t.front_end_reservation.credit_card_payment%>
                    </a>
                    <span class="overflowed pull-right">
                    <img src="/rentit/img/preview/payments/mastercard-2.jpg" alt=""/>
                    <img src="/rentit/img/preview/payments/visa-2.jpg" alt=""/>
                      <!--img src="/rentit/img/preview/payments/american-express-2.jpg" alt=""/>
                      <img src="/rentit/img/preview/payments/discovery-2.jpg" alt=""/>
                      <img src="/rentit/img/preview/payments/eheck-2.jpg" alt=""/-->
                  </span>
                  </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading3"></div>
              </div>
            <% end %>
            <% if @payment_methods.paypal %>
              <div id="paypal_container" class="panel panel-default" <%unless @payment_methods.tpv_virtual%>style="display:none"<%end%>>
                <div class="panel-heading" role="tab" id="heading4">
                  <h4 class="panel-title">
                    <a class="<% unless @payment_methods.tpv_virtual%>show<%else%>collapsed<%end%>"
                       data-payment-method="paypal_standard" data-toggle="collapse" data-parent="#accordion"
                       href="#collapse4" aria-expanded="false" aria-controls="collapse4">
                      <span class="dot"></span> <%=t.front_end_reservation.paypal_payment%>
                    </a>
                    <span class="overflowed pull-right">
                     <img src="/rentit/img/preview/payments/paypal-2.jpg" alt="">
                  </span>
                  </h4>
                </div>
                <div id="collapse4" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading4"></div>
              </div>
            <% end %>

            <% if @booking.can_pay_deposit? and @booking.can_pay_total? %>
              <div id="payment_amount_container" <%if @payment_methods.paypal and @payment_methods.tpv_virtual%>style="display:none"<%end%>>
                <br>
                <h4><%=t.front_end_reservation.payment_amount%></h4>
                <br>
                <form id="payment_amount_form" class="form-additional">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <input type="radio" value="deposit" name="payment"/> <label><%=t.front_end_reservation.payment_amount_deposit%> (<%=@deposit%> %)</label>
                      </div>
                      <div class="form-group">
                        <input type="radio" value="total" name="payment">  <label><%=t.front_end_reservation.payment_amount_total%></label>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            <% end %>

            <br>
            <a id="btn_pay" href="#" class="btn btn-default btn-cf-submit3"><%=t.front_end_reservation.booking_detail_pay_button%></a>

          </div>

        <% end %>

      </div>

    </div>
  </div>
</div>


