<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <!-- Product(s) -->
      <h2 style="font-size: 1.8em; color: #1cbbb4"><%=@booking.customer_name%> <%=@booking.customer_surname%>, <strong><%=t.front_end_reservation.booking_detail_title("#{t[:front_end_reservation][:booking_detail_state][@booking.status.to_sym]}").to_s.downcase%></strong></h2>

      <% @booking.booking_lines.each do |booking_item| %>
        <% product = ::Yito::Model::Booking::BookingCategory.get(booking_item.item_id) %>
        <div class="blog_content">
          <div class="post post-full">
            <h3 class="text-center hch2" style="font-size: 1.4em">
              <%=booking_item.quantity%> x <%=booking_item.item_description_customer_translation%>
            </h3>
            <div class="clearfix"></div>
            <div class="post-header">
              <img class="img-responsive" src="<%= product.photo_url_full %>" alt="" style="margin: 0 auto; display: block"/>
              <div class="price text-right">
                <% if booking_item.item_unit_cost != booking_item.item_unit_cost_base%>
                  <span style="text-decoration:line-through; text-color: black"><%= "%.2f" % (booking_item.item_unit_cost_base * booking_item.quantity)%>€</span>
                <%end%>
                <strong><%='%.2f' % booking_item.item_cost%></strong>€
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="clearfix"></div>

      <!-- Complete information -->
