            <span class="blue"><%=@booking.customer_name%> <%=@booking.customer_surname%></span>
          </div>
        </div>
        <div class="clearfix"></div>

        <div class="input2_wrapper">
          <label class="col-md-6" style="padding-left:0;padding-top:12px;"><%=t.front_end_reservation.booking_detail_customer_email%></label>
          <div class="col-md-6" style="padding-right:0;padding-left:0;">
            <span class="blue"><%=@booking.customer_email%></span>
          </div>
        </div>
        <div class="clearfix"></div>

        <div class="input2_wrapper">
