<script type="text/tpml" id="script_product_detail">

      <div class="blog_content">
          <div class="post post-full">
              <h3 class="text-center hch2"><%%=product.name%></h3>
              <div class="clearfix"></div>
              <div class="post-header">
                  <img class="img-responsive" src="<%%=product.full_photo%>" alt="" style="margin: 0 auto; display: block"/>
                  <div class="price text-right">
                     <%% if (product.base_price != product.price) { %>
                       <span style="text-decoration:line-through; text-color: black"><%%=new Number(product.base_price).toFixed(2)%>€</span>
                     <%% } %>
                       <strong><%%=new Number(shopping_cart.item_cost).toFixed(2)%></strong>€
                  </div>
              </div>
          </div>
      </div>

</script>

<script type="text/tpml" id="script_products_detail">

  <%% for (var idx=0; idx<shopping_cart.items.length; idx++) { %>

      <div class="blog_content">
          <div class="post post-full">
              <h3 class="text-center hch2"><%%=shopping_cart.items[idx].quantity%> x <%%=products[shopping_cart.items[idx].item_id].name%></h3>
              <div class="clearfix"></div>
              <div class="post-header">
                  <img class="img-responsive" src="<%%=products[shopping_cart.items[idx].item_id].full_photo%>" alt="" style="margin: 0 auto; display: block"/>
                  <div class="price text-right">
                      <%% if (shopping_cart.items[idx].item_unit_cost_base != shopping_cart.items[idx].item_unit_cost) { %>
                        <span style="text-decoration:line-through; text-color: black"><%%=new Number(shopping_cart.items[idx].item_unit_cost_base*shopping_cart.items[idx].quantity).toFixed(2)%>€</span>
                      <%% } %>
                        <strong><%%=new Number(shopping_cart.items[idx].item_cost).toFixed(2)%></strong>€
                  </div>
              </div>
          </div>
      </div>

   <%% } %>

</script>

<!-- Script used to render an extra -->

<script type="text/template" id="script_detailed_extra">

  <%% if (extra.max_quantity > 1) { %>
  <div class="select">
    <label for="select<%%=extra.code%>"><%%=extra.name%>&nbsp;<span class="fa-info-extra" rel="<%%=extra.code%>"><i class="fa fa-info-circle"></i></span></label>
    <select name="select<%%=extra.code%>" id="select<%%=extra.code%>"
          class="select input extra-select pull-right"  data-value="<%%=extra.code%>" data-container="body" style="display:block; width: 100%">
      <%% for (var idx=0;idx<=extra.max_quantity;idx++) { %>
      <option value="<%%=idx%>"
        <%% if (extrasInShoppingCart[extra.code] && extrasInShoppingCart[extra.code] == idx) { %>
          selected="selected"
         <%%}%> >
            <%%=idx%> un. <%%if (idx>0){%>(<%%=new Number(extra.unit_price*idx).toFixed(2)%>€)<%%}%>
      </option>
      <%% } %>
    </select>
    <br>
    <br>
  </div>
  <%% } else if (extra.max_quantity == 1) { %>
  <div style="margin-top: 1em">
    <label for="checkboxl<%%=extra.code%>" style="display: block"></label>
      <input id="checkboxl<%%=extra.code%>" type="checkbox" class="extra-checkbox" data-value="<%%=extra.code%>" <%% if (extrasInShoppingCart[extra.code] &&  extrasInShoppingCart[extra.code] > 0) { %> checked="checked" <%% } %>/>
      <span style="color:#434343;font-size:14px;font-weight:bold"><%%=extra.name%> <span class="fa-info-extra" rel="<%%=extra.code%>"><i class="fa fa-info-circle"></i></span></span> <span class="pull-right"> <%%=new Number(extra.unit_price).toFixed(2)%> € </span>
    
  </div>
  <%% } %>

</script>

